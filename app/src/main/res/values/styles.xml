<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:closeIcon">@drawable/cancel</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">@string/hint_search_view</item>
        <item name="android:searchIcon">@drawable/search</item>
        <item name="android:background">@drawable/search_view_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
</resources>
